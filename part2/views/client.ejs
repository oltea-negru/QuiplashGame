<!doctype html>
<html lang="en">
    <div id="game" class="game">
        <%- include('header'); -%>
            <div v-if="me.state==0">
                <%- include('login'); -%>
            </div>
            <div v-else-if="me.state==1">
                <%- include('register'); -%>
            </div>
            <div v-else-if="me.state==2">
                <div class="waiting_room" v-if="gameState.state==0">
                    <%- include('waiting_room') -%>
                </div>
                <div class="in_game" v-else-if="gameState.state==1">
                    <%- include('prompts') -%>
                </div>
                <div class="in_game" v-else-if="gameState.state==2">
                    <%- include('answers')-%>
                </div>
                <div class="in_game" v-else-if="gameState.state==3">
                    <%- include ('voting')-%>
                </div>
                <div class="in_game" v-else-if="gameState.state==4">
                    <%- include ('scores')-%>
                </div>
                <div class="in_game" v-else-if="gameState.state==5">
                    <%- include ('game_over')-%>
                </div>
                <div class="bg-white d-inline-flex p-1  fixed-bottom justify-content-center">
                    <p><strong>my state: {{me.state}} | game state: {{gameState.state}}</strong></p>
                </div>
            </div>
            <%- include('footer'); -%>
    </div>

</html>